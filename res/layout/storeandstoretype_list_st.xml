<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="${packageName}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/titlebarst"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ED4040" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#ED4040" >

            <ImageView
                android:id="@+id/iv_back_storest"
                 android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_back" />
        </RelativeLayout>
        <!-- 定位城市 -->

        <TextView
            android:id="@+id/tv_titlesst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="促销专场"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

  
    <ListView
        android:id="@+id/storetype_list_sastst"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:dividerHeight="0.1dp"
        android:divider="@drawable/list_divider"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/titlebarst"
        android:background="#47d2b48c"
        android:clickable="true"
        android:scrollbars="none" >
    </ListView>
 <!-- android:footerDividersEnabled="false" -->
    <ListView
        android:id="@+id/store_list_sastst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebarst"
        android:layout_toRightOf="@id/storetype_list_sastst"
        android:clickable="true"
        android:dividerHeight="0.1dp"
        android:divider="@drawable/list_divider"
         >
    </ListView>

</RelativeLayout>