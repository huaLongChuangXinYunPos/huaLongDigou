<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pay_bg_color" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/pay_bg_color" >

            <ImageView
                android:id="@+id/w_up_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:src="@drawable/selector_back" />
        </RelativeLayout>
        <!-- 定位城市 -->

        <TextView
            android:id="@+id/tv_titles_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="绑定账号"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/pos_login_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebar"
        android:layout_margin="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="账号："
                android:textColor="@color/blue_text_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/login_uname_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请填写卡号"  android:singleLine="true"
                android:inputType="number"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/w_bt_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pos_login_tl"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/login_ok_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_bg_kuai_normal"
            android:text="提   交"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/login_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_bg_line_normal"
            android:text="取  消"
            android:textColor="@color/red_text_color" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/pos_login_tal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_bt_all"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/sso_shape_button_normal_nm"
        android:padding="10dp" >

        <TableRow
            android:id="@+id/tableRow93"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="已绑定的账号："
                android:textColor="@color/blue_text_color"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="账号："
                android:textColor="@color/blue_text_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:text="4109888848384756"
                android:textColor="@color/blue_text_color"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow332"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="账号："
                android:textColor="@color/blue_text_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:text="34345658848384756"
                android:textColor="@color/blue_text_color"
                android:textSize="14sp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>