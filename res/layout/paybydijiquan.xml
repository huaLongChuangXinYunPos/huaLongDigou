<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="83px" >

        <TextView
            android:id="@+id/coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18px"
            android:layout_marginTop="36px"
            android:paddingLeft="20px"
            android:textColor="@color/limit_textcolor"
            android:textSize="23px" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/gray_divide" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="59px"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="equals_money"
            android:textColor="@color/limit_textcolor"
            android:textSize="20px" />

        <TextView
            android:id="@+id/equals_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:textColor="@color/limit_textcolor"
            android:textSize="20px" />
    </LinearLayout>

    <View
         android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/gray_divide" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="59px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80px"
            android:text="welfare_introduction"
            android:textColor="@color/limit_textcolor"
            android:textSize="20px" />

        <TextView
            android:id="@+id/welfare_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/limit_textcolor"
            android:textSize="20px" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/gray_divide" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="59px"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="equals_ingot"
            android:textColor="@color/limit_textcolor"
            android:textSize="20px" />

        <TextView
            android:id="@+id/equals_ingot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:textColor="@color/dark_yellow"
            android:textSize="20px" />
    </LinearLayout>

    <View
      android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/gray_divide" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="59px"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="ingots_deadline_date"
            android:textColor="@color/limit_textcolor"
            android:textSize="20px" />

        <TextView
            android:id="@+id/ingots_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:textColor="@color/limit_textcolor"
            android:textSize="20px" />
    </LinearLayout>

    <View
         android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/gray_divide"/>

    <RelativeLayout
        android:id="@+id/see_other_pro"
        android:layout_width="fill_parent"
        android:layout_height="59px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="see_other_pro"
            android:textColor="@color/limit_textcolor"
            android:textSize="20px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>

    <View
      android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="@color/gray_divide" />

    <Button
        android:id="@+id/welfare_help"
        android:layout_width="281px"
        android:layout_height="56px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50px"
        android:layout_marginTop="30px"
        android:background="@color/gray_divide"
        android:text="立即兑换"
        android:textColor="@color/limit_white"
        android:textSize="23sp" />

</LinearLayout>