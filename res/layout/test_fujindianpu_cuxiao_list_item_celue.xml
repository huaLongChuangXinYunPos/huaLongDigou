<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stcx_promote_layout_cx"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical" >
 <LinearLayout
        android:id="@+id/manzhengyouhui_ll_cx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >
    <ImageView
        android:id="@+id/dian_type3_cx"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="13dp"
        android:background="@drawable/my_collection_tag" />

    <TextView
        android:id="@+id/name_cx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:text="2343243"
        android:textColor="#ff909090"
        android:textSize="12.0sp" />
</LinearLayout>
     <LinearLayout
        android:id="@+id/shoudanyouhui_ll_cx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_promote_layout_cx"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/dian_type23_cx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="数量 : " />

        <TextView
            android:id="@+id/num_tv_cx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff909090"
            android:textSize="12.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jianmianyouhui_ll_cx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoudanyouhui_ll_cx"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dian_type23_cx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:text="活动：" />

        <TextView
            android:id="@+id/overtime_tv_cx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff909090"
            android:textSize="12.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/manzhengyouhui_ll_cx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jianmianyouhui_ll_cx"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dian_type23_cx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:text="还剩：" />

        <TextView
            android:id="@+id/endtime_tv_cx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff909090"
            android:textSize="12.0sp" />
    </LinearLayout>
    
</LinearLayout>