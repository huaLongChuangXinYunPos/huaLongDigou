<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" ><RelativeLayout
        android:id="@+id/normal_title_ssm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ED4040" >

        <ImageView
            android:id="@+id/salesheet_mine_back"
            android:clickable="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/selector_back" />

        <TextView
            android:id="@+id/salesheet_mine_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="您的订单"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        </RelativeLayout>

            <LinearLayout
                android:id="@+id/btt_myorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/dd_shake_text_bg"
                    android:onClick="zzzx"
                    android:text="正在执行订单"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/bt_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/dd_shake_text_bg"
                    android:onClick="lsdd"
                    android:text="     历史订单     "
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>

            <ListView
                android:id="@+id/salesheet"
                android:divider="@drawable/list_divider"
                android:dividerHeight="0.1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btt_myorder"
                android:layout_below="@id/normal_title_ssm" >
            </ListView>

            <ListView
                android:id="@+id/lssalesheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btt_myorder"
                android:layout_below="@id/normal_title_ssm"
                android:visibility="gone" >
            </ListView>
        </RelativeLayout>
