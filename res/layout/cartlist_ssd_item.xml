<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#09000000"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip" >

        <FrameLayout
            android:id="@+id/goods_icon_lay"
            android:layout_width="80.0dip"
            android:layout_height="70.0dip"
            android:layout_gravity="top"
            android:layout_marginTop="10.0dip"
            android:background="#ffffffff" >

            <FrameLayout
                android:layout_width="85.0dip"
                android:layout_height="75.0dip"
                android:layout_gravity="center" >

                <com.loopj.android.image.SmartImageView
                    android:id="@+id/cart_ssd_goods_icon"
                    android:layout_width="85.0dip"
                    android:layout_height="75.0dip"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_empty_page" />

                <TextView
                    android:id="@+id/cart_ssd_ranking_tv"
                    android:layout_width="28.0dip"
                    android:layout_height="24.0dip"
                    android:background="@drawable/top_tag"
                    android:gravity="center_horizontal"
                    android:paddingTop="3.0dip"
                    android:text="特价"
                    android:textColor="#ffffffff"
                    android:textSize="12.0sp" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="11.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="5.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cart_ssd_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="10.0dip"
                android:ellipsize="end"
                android:lineSpacingExtra="6.0dip"
                android:lines="1"
                android:text="牙膏120g"
                android:textColor="#ff333333"
                android:textSize="14.0sp" />

            <LinearLayout
                android:id="@+id/allprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/goods_market_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.0dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="单价:￥"
                    android:textColor="#ffed145b"
                    android:textSize="11.0sp" />

                <TextView
                    android:id="@+id/cart_ssd_goods_price21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:singleLine="true"
                    android:text="9"
                    android:textColor="#ffed145b"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/goods_market_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="元"
                    android:textColor="#ffed145b"
                    android:textSize="11.0sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp" >

                <TextView
                    android:id="@+id/count_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="60dp"
                    android:text="数量："
                    android:textColor="@color/product_text_3c3c46"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/count_tip"
                    android:background="@drawable/product_color_size_tag_bg_shape"
                    android:orientation="horizontal"
                    android:padding="0dp" >

                    <ImageButton
                        android:id="@+id/jian_cart_ssd"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:padding="3dp"
                        android:scaleType="center"
                        android:src="@drawable/icon_choose_minus" />

                    <ImageView
                        android:layout_width="1.0px"
                        android:layout_height="fill_parent"
                        android:src="@color/product_text_3c3c46" />

                    <EditText
                        android:id="@+id/cart_ssd_num_edit"
                        android:layout_width="28dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="0.5dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="9"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="#99000000"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="1.0px"
                        android:layout_height="fill_parent"
                        android:src="@color/product_text_3c3c46" />

                    <ImageButton
                        android:id="@+id/jia_cart_ssd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="3dp"
                        android:scaleType="center"
                        android:src="@drawable/icon_choose_plus" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>