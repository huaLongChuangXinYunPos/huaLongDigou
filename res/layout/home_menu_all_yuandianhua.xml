<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="${packageName}.${activityClass}" >

    <!-- home_bottom_menu -->

    <LinearLayout
        android:id="@+id/activity_main_fg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/home_bottom_menus"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:padding="0dp" >

        <LinearLayout
            android:id="@+id/home_bottom_menu_nei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffeeeeee"
            android:orientation="horizontal"
            android:padding="0dp" >

            <LinearLayout
                android:id="@+id/ll_home_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_home_page"
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="goHomepage"
                    android:src="@drawable/ic_main_home_sel" />

                <TextView
                    android:id="@+id/tv_home_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="首页"
                    android:textColor="#ff0000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sousuo_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/iv_sousuo_menu"
                        android:layout_width="40dp"
                        android:layout_height="38dp"
                        android:clickable="true"
                        android:onClick="goFenleipage"
                        android:src="@drawable/ic_main_sort_nor" />

                    <ImageView
                        android:id="@+id/iv_sousuodian_menu"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/yiduhong"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_sousuo_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="分类"
                    android:textColor="@color/TextColorGray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dianhua_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_dianhua_menu"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="goDianhuapage"
                    android:src="@drawable/dial_call_btn_sel" />

                <TextView
                    android:id="@+id/tv_dianhua_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="免费电话"
                    android:textColor="#00aa00"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cart_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/iv_cart_menu"
                        android:layout_width="40dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:onClick="goCartpage"
                        android:src="@drawable/ic_main_car_nor" />

                    <TextView
                        android:id="@+id/tv_cartdian_menu"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/yiduhong"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_cart_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="购物车"
                    android:textColor="@color/TextColorGray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_myinfo_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_myinfo_menu"
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="goMyinfopage"
                    android:src="@drawable/ic_main_my_nor" />

                <TextView
                    android:id="@+id/tv_myinfo_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="我的"
                    android:textColor="@color/TextColorGray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>