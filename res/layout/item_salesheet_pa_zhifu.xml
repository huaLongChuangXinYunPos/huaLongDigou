<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pa_ss_ll_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <!-- android:descendantFocusability="blocksDescendants" -->

    <TextView
        android:id="@+id/pa_ss_tv_ssno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="订单号：12432345345435334654"
        android:textColor="#444444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pa_ss__tv_fprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:text="价格：12.99"
        android:textColor="#444444"
        android:textSize="12sp" />

    <Button
        android:id="@+id/sslist_fukuan"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@+id/pa_ss_tv_ssno"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/sso_button_bg_normal"
        android:focusable="false"
        android:clickable="false"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="付款"
        android:textColor="@drawable/sso_button_text_normal"
        android:textSize="12.0dip" />

</RelativeLayout>