<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/ditu_pup_goods_nname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击报价"
        android:textColor="#00ff00"
        android:textSize="16.0sp" />

    <View
        android:layout_width="90dp"
        android:layout_height="0.5dip"
        android:background="@color/setting_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ditu_pup_goodsnamevt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名:"
            android:textColor="@color/fuxk_base_color_black"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/ditu_pup_baojia_goodsname1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=""
            android:ellipsize="end"
            android:textColor="@color/fuxk_base_color_black"
            android:textSize="13.0sp" />
    </LinearLayout>

    <View
        android:layout_width="90dp"
        android:layout_height="0.5dip"
        android:background="@color/setting_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ditu_pup_goodsprice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/fuxk_base_color_black"
            android:textSize="13.0sp" />
    </LinearLayout>

   
   

</LinearLayout>