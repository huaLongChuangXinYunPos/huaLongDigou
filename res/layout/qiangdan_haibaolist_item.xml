<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/ll_goods_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15.0dip"
        android:layout_toRightOf="@id/fram_icon"
        android:gravity="center_vertical"
        android:lines="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/qd_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="goodsname"
            android:textColor="#aa111111"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/allprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_goods_item"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/fram_icon"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_pirce_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="单价 ￥"
            android:textColor="#ffed145b"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/goods_sale_price_pl02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="10"
            android:textColor="#ffed145b"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goods_promote_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/allprice"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/fram_icon"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_store_name_pl02"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="数量："
            android:textColor="#ff909090"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/goods_sale_price_yuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff909090"
            android:textSize="12.0sp" />
    </LinearLayout>

</RelativeLayout>