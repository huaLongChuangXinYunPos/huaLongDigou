<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/dianming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dian_type"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="1dp"
            android:background="@drawable/product_commnet_v1" />

        <ImageView
            android:id="@+id/dian_type3"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:background="@drawable/companly_approve" />
        <ImageView
            android:id="@+id/dian_type3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:background="@drawable/zan_yellow" />

        <TextView
            android:id="@+id/tv_pirce_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="#aa111111"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/goods_sale_price_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff909090"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goods_lie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dianming"
        android:orientation="horizontal"
        android:padding="1dp" >

        <LinearLayout
            android:id="@+id/good_store1_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_goodpic1"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_empty_page" />

            <TextView
                android:id="@+id/tv_goodname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/good_store2_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true" android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_goodpic2"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_empty_page" />

            <TextView
                android:id="@+id/tv_goodsname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/good_store3_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true" android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_goodpic3"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_empty_page" />

            <TextView
                android:id="@+id/tv_goodsname3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goods_promote_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_lie"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dian_type3"
            android:layout_width="14dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:background="@drawable/umeng_share_locate" />

        <TextView
            android:id="@+id/tv_pirce_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff909090"
            android:textSize="12.0sp" />
    </LinearLayout>

</RelativeLayout>