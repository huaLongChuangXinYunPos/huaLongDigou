<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants" >

    <LinearLayout
        android:id="@+id/dianming_cx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dian_type_cx"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="1dp"
            android:background="@drawable/product_commnet_v1" />

        <ImageView
            android:id="@+id/dian_approvetype3_cx"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:background="@drawable/companly_approve" />

        <ImageView
            android:id="@+id/dian_type3_cx"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:background="@drawable/zan_yellow" />

        <TextView
            android:id="@+id/list_tv_store_name_cx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#aa111111"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/list_tv_distance_store_cx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="#ff909090"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goods_lie_cx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dianming_cx"
        android:orientation="horizontal"
        android:padding="1dp" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goods_promote_layout_cx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_lie_cx"
        android:orientation="vertical" >

       
    </LinearLayout>

   
</RelativeLayout>