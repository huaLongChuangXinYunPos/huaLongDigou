<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="10dp"
    android:background="#ffffff" >

    <FrameLayout
        android:id="@+id/fram_icon"
        android:layout_width="80.0dip"
        android:layout_height="70.0dip"
        android:layout_gravity="top"
        android:background="#ffffffff" >

        <com.loopj.android.image.SmartImageView
            android:id="@+id/goodicon"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_gravity="center"
            android:background="@drawable/ic_empty_page" />

        <TextView
            android:id="@+id/top_ranking_tv"
            android:layout_width="28.0dip"
            android:layout_height="24.0dip"
            android:background="@drawable/top_tag"
            android:gravity="center_horizontal"
            android:paddingTop="3.0dip"
            android:text="特价"
            android:textColor="#ffffffff"
            android:textSize="12.0sp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_goods_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/fram_icon"
        android:gravity="center_vertical"
        android:lines="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dian_type3"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:background="@drawable/companly_approve" />

        <ImageView
            android:id="@+id/dian_type3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:background="@drawable/zan_yellow" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="可口可乐300ml"
            android:textColor="#aa111111"
            android:textSize="14.0sp" />
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:background="#dddddd" />

</RelativeLayout>