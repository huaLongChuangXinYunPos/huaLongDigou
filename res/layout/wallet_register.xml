<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pay_bg_color" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/pay_bg_color" >

            <ImageView
                android:id="@+id/w_reg_iv_back"
                android:layout_width="35dp"
            android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:src="@drawable/selector_back" />
        </RelativeLayout>
        <!-- 定位城市 -->

        <TextView
            android:id="@+id/tv_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/w_reg_BuyerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_below="@id/titlebar"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="登录用户名(易于记住的)"
        android:paddingLeft="35dp"
        android:singleLine="true"
        android:textSize="14sp" >
    </EditText>

    <ImageView
        android:id="@+id/iv_user11"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/w_reg_BuyerName"
        android:layout_alignTop="@id/w_reg_BuyerName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/login_account" />

    <EditText
        android:id="@+id/w_reg_BuyerPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_reg_BuyerName"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="登录密码(不能少于6位)"
        android:inputType="textPassword"
        android:paddingLeft="35dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ImageView022"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/w_reg_BuyerPwd"
        android:layout_alignTop="@id/w_reg_BuyerPwd"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/login_pwd" />

    <EditText
        android:id="@+id/w_reg_Tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_reg_BuyerPwd"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="绑定手机号码"
        android:paddingLeft="35dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ImageView0234"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/w_reg_Tel"
        android:layout_alignTop="@id/w_reg_Tel"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/phone_number_v1" />

    <EditText
        android:id="@+id/w_reg_PayPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_reg_Tel"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="支付密码必须6位"
        android:inputType="textPassword"
        android:paddingLeft="35dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ImageView4402"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/w_reg_PayPwd"
        android:layout_alignTop="@id/w_reg_PayPwd"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/login_password_icon" />

    <EditText
        android:id="@+id/w_reg_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_reg_PayPwd"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="邮箱(用于找回密码)"
        android:inputType="textEmailAddress"
        android:paddingLeft="35dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ImageView0em"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/w_reg_Email"
        android:layout_alignTop="@id/w_reg_Email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/emal_gray_icon" />

    <EditText
        android:id="@+id/w_reg_cRealName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_reg_Email"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="真实姓名"
        android:paddingLeft="35dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ImageView0emff"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/w_reg_cRealName"
        android:layout_alignTop="@id/w_reg_cRealName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/fx_login_user_account_ico" />

    <EditText
        android:id="@+id/w_reg_Cid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_reg_cRealName"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="身份证号"
        android:paddingLeft="35dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ImageView0Zmm"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/w_reg_Cid"
        android:layout_alignTop="@id/w_reg_Cid"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/card_cid" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_reg_Cid"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/w_reg_bt_reg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/btn_orange_selector"
            android:text="注册"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>