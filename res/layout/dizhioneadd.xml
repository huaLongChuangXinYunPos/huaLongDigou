<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ED4040" >

        <ImageButton
             android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:onClick="backpage"
            android:src="@drawable/selector_back" />

        <TextView
            android:id="@+id/tv_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增收货地址"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    <!-- 定位城市 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="收货人："
            android:textColor="#ff666666"
            android:textSize="14.0sp" />

        <EditText
            android:id="@+id/dz_add_et_receiver_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp"
            android:inputType="text"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="手机号："
            android:textColor="#ff666666"
            android:textSize="14.0sp" />

        <EditText
            android:id="@+id/dz_add_et_mobile"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" android:inputType="phone"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15.0dip"
        android:paddingRight="18.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="收货地址："
            android:textColor="#ff666666"
            android:textSize="14.0sp" />

        <EditText
            android:id="@+id/dz_add_et_addr"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/White"
            android:gravity="top|left"
            android:minLines="3"  android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="18.0dip" >

        <Button
            android:id="@+id/dz_add_btn_save"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="18.0dip"
            android:background="@drawable/sso_button_bg_normal_solid"
            android:onClick="saveAddr"
            android:text="保存地址"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>