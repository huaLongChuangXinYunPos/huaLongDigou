<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pay_bg_color" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/pay_bg_color" >

            <ImageView
                android:id="@+id/w_login_iv_back"
                 android:layout_width="35dp"
            android:layout_height="35dp"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_back"
                 />
        </RelativeLayout>
        <!-- 定位城市 -->

        <TextView
            android:id="@+id/tv_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="钱包登陆"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/w_log_BuyerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_below="@id/titlebar"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="用户名/邮箱/手机号"
        android:paddingLeft="35dp"
        android:singleLine="true"
        android:textSize="14sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/w_log_BuyerPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_log_BuyerName"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="35dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/w_log_BuyerName"
        android:layout_alignTop="@id/w_log_BuyerName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/login_account" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/w_log_BuyerPwd"
        android:layout_alignTop="@id/w_log_BuyerPwd"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/login_pwd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_log_BuyerPwd"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/w_login_bt_login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/btn_orange_selector"
            android:text="登陆"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/w_login_bt_reg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_bg_line_normal"
            android:text="注册"
            android:textColor="@color/red_text_color" />
    </LinearLayout>

</RelativeLayout>