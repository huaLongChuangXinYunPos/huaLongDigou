<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_record_leftpart"
    android:layout_width="fill_parent"
    android:layout_height="170.0dip"
    android:paddingTop="2dp"
    android:paddingBottom="10dp"
    android:background="@drawable/all_list_item_bg" >

    <TextView
        android:id="@+id/ssitem_status_fahuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:text="未发货"
        android:textColor="#ff003fff"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/call_record_goto_detail_layout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        android:background="@color/transparent" >

        <Button
            android:id="@+id/xq"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/sso_button_bg_normal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="详情"
            android:textColor="@drawable/sso_button_text_normal"
            android:textSize="12.0dip" />

        <Button
            android:id="@+id/sslist_pingjia"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/xq"
            android:background="@drawable/sso_button_bg_normal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="评价"
            android:textColor="@drawable/sso_button_text_normal"
            android:textSize="12.0dip"
            android:visibility="gone" />

        <Button
            android:id="@+id/mysslistitem_fukuan"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/xq"
            android:background="@drawable/sso_button_bg_normal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="付款"
            android:textColor="@drawable/sso_button_text_normal"
            android:textSize="12.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ddid"
            style="@style/text_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="订单号"
            android:textColor="#333333"
            android:textSize="@dimen/call_record_list_time" />

        <TextView
            android:id="@+id/tprice"
            style="@style/text_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ddid"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:text="zongjia"
            android:textColor="#333333"
            android:textSize="@dimen/call_record_list_phone_belong_to" />

        <TextView
            android:id="@+id/ddstate"
            style="@style/text_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tprice"
            android:layout_margin="5dp"
            android:text="状态"
            android:textColor="#333333"
            android:textSize="@dimen/call_record_list_phone_belong_to" />

        <TextView
            android:id="@+id/ddriqi"
            style="@style/text_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ddstate"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:text="riqi"
            android:textColor="#333333"
            android:textSize="@dimen/call_record_list_time" />
    </RelativeLayout>

</RelativeLayout>